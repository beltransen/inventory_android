<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Define tus variables de ViewModel si es necesario -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EscanearProductoActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbarMiperfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="Nuevo Producto"
                app:navigationIcon="@drawable/arrowback"
                style="@style/Widget.MaterialComponents.Toolbar.Primary" />
        </com.google.android.material.appbar.AppBarLayout>

        <EditText
            android:id="@+id/NombreProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbarlayout" />

        <EditText
            android:id="@+id/Foto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Foto"
            app:layout_constraintEnd_toStartOf="@+id/botonSeleccionarFoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/NombreProducto" />

        <Button
            android:id="@+id/botonSeleccionarFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Foto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/Foto"
            app:layout_constraintTop_toTopOf="@id/Foto" />

        <EditText
            android:id="@+id/Categoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Categoria"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Foto" />

        <EditText
            android:id="@+id/Precio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Precio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Categoria" />

        <EditText
            android:id="@+id/Codigo_barras"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="CÃ³digo de barras"
            app:layout_constraintEnd_toStartOf="@+id/botonEscanearCodigo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Precio" />

        <Button
            android:id="@+id/botonEscanearCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escanear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/Codigo_barras" />

        <EditText
            android:id="@+id/Cantidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Cantidad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Codigo_barras" />

        <Button
            android:id="@+id/botonCancelUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            app:layout_constraintEnd_toStartOf="@id/botonSaveUsuario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Cantidad" />

        <Button
            android:id="@+id/botonSaveUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Guardar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/botonCancelUsuario"
            app:layout_constraintTop_toBottomOf="@id/Cantidad" />

        <ImageView
            android:id="@+id/ImagenPreview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Cantidad" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
